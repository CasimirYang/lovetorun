<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:clipChildren="false"
    android:id="@+id/weekItem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="6dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    card_view:cardPreventCornerOverlap="false"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/weekLayout"
            android:layout_height="210dp"
            android:background="@drawable/cardview_background"
            >
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/weekNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="第一周"
                android:textSize="30sp"
                android:layout_margin="20dp"
                />
            <android.support.v7.widget.AppCompatTextView
                android:layout_below="@id/weekNo"
                android:id="@+id/weekTip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="3个原则：适度、坚持、休息"
                android:textSize="16sp"
                android:layout_marginLeft="20dp"
                />
            <android.support.v4.widget.ContentLoadingProgressBar
                android:id="@+id/week_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:background="#ebebeb"
            android:id="@+id/course_one"
            android:clickable="false">
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/course_one_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:gravity="center"
                android:text="课程一"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/course_one_finish_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="13sp"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_marginLeft="35dp"
                android:layout_toRightOf="@id/course_one_text"/>
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/course_one_image"
                android:layout_alignParentRight="true"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_star_rate_off"
                android:layout_marginRight="15dp"/>
            <View
                android:layout_alignBottom="@id/course_one_text"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#b7b3b3" />
            <RelativeLayout
                android:id="@+id/overlay_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#c5858181"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:background="#ebebeb"
            android:id="@+id/course_two">
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/course_two_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:gravity="center"
                android:text="课程二"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/course_two_finish_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="13sp"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_marginLeft="35dp"
                android:layout_toRightOf="@id/course_two_text"/>

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/course_two_image"
                android:layout_alignParentRight="true"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_star_rate_off"
                android:layout_marginRight="15dp"/>
            <View
                android:layout_alignBottom="@id/course_two_text"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#b7b3b3"
                />
            <RelativeLayout
                android:id="@+id/overlay_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#c5858181"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:background="#ebebeb"
            android:id="@+id/course_three"
            android:clipChildren="false">
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/course_three_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:gravity="center"
                android:text="课程三"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/course_three_finish_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="13sp"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_marginLeft="35dp"
                android:layout_toRightOf="@id/course_three_text"/>
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/course_three_image"
                android:layout_alignParentRight="true"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_star_rate_off"
                android:layout_marginRight="15dp"/>
            <RelativeLayout
                android:id="@+id/overlay_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#c5858181"
                />
        </RelativeLayout>

    </android.support.v7.widget.LinearLayoutCompat>
</android.support.v7.widget.CardView>
